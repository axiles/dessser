opam-version: "2.0"
version: "@PACKAGE_VERSION@"
name: "dessert"
maintainer: "rixed-opam@happyleptic.org"
authors: "rixed-opam@happyleptic.org"
homepage: "https://github.com/rixed/berserdes"
bug-reports: "https://github.com/rixed/berserdes/issues"
dev-repo: "https://github.com/rixed/berserdes.git"
build: [
  ["./configure"]
  [make]
]
build-test: [make "check"]
