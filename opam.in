opam-version: "2.0"
version: "@PACKAGE_VERSION@"
name: "dessert"
maintainer: "rixed-opam@happyleptic.org"
authors: "rixed-opam@happyleptic.org"
homepage: "https://github.com/rixed/dessert"
bug-reports: "https://github.com/rixed/dessert/issues"
dev-repo: "git+https://github.com/rixed/dessert.git"
synopsis: "(de)serializer generator"
build: [
  ["./configure"]
  [make]
  [make "check"] {with-test}
]
install: [make "bindir=%{bin}%" "install"]
remove: [make "bindir=%{bin}%" "uninstall"]
depends: [
  "ocamlfind"
  "batteries"
  "stdint"
]
